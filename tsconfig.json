{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/navigation/*": ["src/navigation/*"],
      "@/state/*": ["src/state/*"],
      "@/screens/*": ["src/screens/*"],
      "@/database/*": ["src/database/*"],
      "@/styles/*": ["src/styles/*"],
      "@/api/*": ["src/api/*"]
    }
  },
  "include": ["src", "App.tsx", "__tests__"]
}
